<script>
	import { generatePassword } from './generator.js';
	import '~/style.css';

	let length = 16;
	let lowercase = 1;
	let uppercase = 1;
	let number = 1;
	let special = 1;
	let ambiguous = false;

	let password = '';

	let textfield;

	function generate (ev) {
		if (ev) {
			ev.preventDefault();
		}

		password = generatePassword({
			length: length,
			lowercase: lowercase,
			uppercase: uppercase,
			number: number,
			special: special,
			ambiguous: ambiguous,
		});
	}

	function copy () {
		textfield.select();
		document.execCommand('copy');
	}

	generate();
</script>

<h3>random password generator</h3>

<form @submit={generate}>
	<div class='password'>
		<input readonly value={password} #ref={textfield} />
		<button type=button @click={copy}>copy</button>
		<button type=submit>generate</button>
	</div>

	<hr />

	<label>
		<span>password length</span>
		<input required type='number' min='1' :value={length} />
	</label>

	<label>
		<span>min lowercase characters</span>
		<input required type='number' min='-1' :value={lowercase} />
	</label>

	<label>
		<span>min uppercase characters</span>
		<input required type='number' min='-1' :value={uppercase} />
	</label>

	<label>
		<span>min number characters</span>
		<input required type='number' min='-1' :value={number} />
	</label>

	<label>
		<span>min special characters</span>
		<input required type='number' min='-1' :value={special} />
	</label>

	<label>
		<span>ambiguous characters</span>
		<input type='checkbox' :checked={ambiguous} />
	</label>

	<hr>

	<p>
		<a target='_blank' href='https://github.com/intrnl/random-password-generator'>
			github
		</a>
	</p>
</form>

